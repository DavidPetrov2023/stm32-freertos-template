{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (OpenOCD + ST-Link)",
      "type": "cortex-debug",
      "request": "launch",
      "servertype": "openocd",
      "cwd": "${workspaceFolder}",
      "executable": "${workspaceFolder}/build/app/app.elf",
      "configFiles": ["${workspaceFolder}/boards/nucleo_g070rb/st_mcu_g0.cfg"],
      "svdFile": "${workspaceFolder}/boards/nucleo_g070rb/STM32G070.svd",
      "gdbPath": "/usr/bin/gdb-multiarch",
      "stopAtEntry": true,
      "runToEntryPoint": "",
      "preLaunchTask": "Build (Ninja)",
      "serverLaunchTimeout": 10000,
      "showDevDebugOutput": "raw",
      "rtos": "FreeRTOS"
    }
  ]
}
